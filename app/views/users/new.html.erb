<h1>Sign Up!</h1>

    <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password%>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :profile_pic %>
    <%= f.text_field :profile_pic %>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <%= f.submit "Sign Up" %>
    <% end %>

